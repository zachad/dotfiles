# recommended by brew doctor
export PATH="/home/zachad/bin:/usr/local/git/bin:/usr/local/bin:/usr/local/go/bin:/usr/cloudshark/bin:/usr/cloudshark/ruby/bin:/opt/crystal/bin:$PATH"
export SVN_EDITOR='vim'
